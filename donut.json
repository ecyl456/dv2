{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 380,
    "height": 200,
    "description": "A donut chart with the most recent year's data.",
    "params": [
        {
            "name": "Year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 1991,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/datasets/gross-national-income-per-capita-undp.csv"
    },
    "transform": [
        {
            "filter": "datum.Year == Year_selection"
        },
        {
            "calculate": "toNumber(datum['Gross national income per capita'])",
            "as": "GNI_per_capita"
        },
        {
            "filter": "isValid(datum.GNI_per_capita) && !isNaN(datum.GNI_per_capita)"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "sort": [
                {
                    "field": "GNI_per_capita",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.rank <= 10"
        }
    ],
    "mark": {
        "type": "arc",
        "innerRadius": 50
    },
    "encoding": {
        "theta": {
            "field": "GNI_per_capita",
            "type": "quantitative"
        },
        "color": {
            "field": "Entity",
            "type": "nominal",
            "scale": {
                "range": [
                    "#f09784",
                    "#a6daed",
                    "#52a397",
                    "#627067",
                    "#5d357a",
                    "#c6dba2",
                    "#3498DB",
                    "#32c9bf",
                    "#a36288",
                    "#a7a4bf"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Entity",
                "type": "nominal"
            },
            {
                "field": "GNI_per_capita",
                "title": "Gross National Income Per Capita",
                "type": "quantitative",
                "format": ",d"
            },
            {
                "field": "Year",
                "title": "Year",
                "type": "ordinal"
            }
        ]
    },
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "legend": {
            "orient": "right",
            "padding": 30
        },
        "padding": {
            "top": 30,
            "left": 100,
            "right": 20,
            "bottom": 40
        }
    }
}