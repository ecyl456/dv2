{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Unemployment Rate",
    "width": 1000,
    "height": 500,
    "params": [
        {
            "name": "Year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 1991,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "selected_country",
            "value": null,
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Malaysia",
                    "Australia"
                ],
                "labels": [
                    "World Map",
                    "Malaysia",
                    "Australia"
                ],
                "name": "Select country: "
            }
        },
        {
            "name": "zoom_level",
            "value": 200,
            "bind": {
                "input": "range",
                "min": 200,
                "max": 6000,
                "step": 100,
                "name": "Zoom: "
            }
        }
    ],
    "projection": {
        "type": "naturalEarth1",
        "scale": {
            "expr": "selected_country ? zoom_level : zoom_level"
        },
        "center": {
            "expr": "selected_country ? (selected_country == 'Malaysia' ? [101.9758, 4.2105] : selected_country == 'Australia' ? [133.7751, -25.2744] : [0, 0]) : [0, 0]"
        }
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/ne_1_.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/datasets/unemployment-rate.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year_selection"
                },
                {
                    "calculate": "datum.Entity == 'United States' ? 'United States of America' : datum.Entity",
                    "as": "Standardized_Country"
                },
                {
                    "calculate": "datum.Standardized_Country + ': ' + datum['Unemployment, total (% of total labor force) (modeled ILO estimate)']",
                    "as": "combined_text"
                },
                {
                    "lookup": "Standardized_Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/ne_1_.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_10m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                }
            ],
            "layer": [
                {
                    "mark": {
                        "type": "geoshape",
                        "stroke": "#fff",
                        "strokeWidth": 0.5
                    },
                    "encoding": {
                        "shape": {
                            "field": "geo",
                            "type": "geojson"
                        },
                        "color": {
                            "field": "Unemployment, total (% of total labor force) (modeled ILO estimate)",
                            "type": "quantitative",
                            "scale": {
                                "type": "linear",
                                "domain": [
                                    0,
                                    35
                                ],
                                "range": [
                                    "lightblue",
                                    "darkblue"
                                ]
                            },
                            "legend": {
                                "title": "Gross Enrollment Ratio (%)"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Standardized_Country",
                                "type": "nominal",
                                "title": "Country"
                            },
                            {
                                "field": "Unemployment, total (% of total labor force) (modeled ILO estimate)",
                                "type": "quantitative",
                                "title": "Unemployment Rate"
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "config": {}
}