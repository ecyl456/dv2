{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1090,
    "height": 550,
    "params": [
        {
            "name": "Year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 1991,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "selected_country",
            "value": null,
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Malaysia",
                    "Australia"
                ],
                "labels": [
                    "World Map",
                    "Malaysia",
                    "Australia"
                ],
                "name": "Select country: "
            }
        },
        {
            "name": "zoom_level",
            "value": 200,
            "bind": {
                "input": "range",
                "min": 200,
                "max": 6000,
                "step": 100,
                "name": "Zoom: ",
                "element": "custom-slider"
            }
        }
    ],
    "projection": {
        "type": "naturalEarth1",
        "scale": {
            "expr": "selected_country ? zoom_level : zoom_level"
        },
        "center": {
            "expr": "selected_country ? (selected_country == 'Malaysia' ? [101.9758, 4.2105] : selected_country == 'Australia' ? [133.7751, -25.2744] : [0, 0]) : [0, 0]"
        }
    },
    "layer": [
        {
            "mark": {
                "type": "geoshape",
                "fill": "#d9eeff"
            },
            "data": {
                "sphere": true
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "data": {
                "graticule": true
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/ne_1_.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "grey",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/normalised_csv.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year_selection"
                },
                {
                    "filter": "datum.Entity !== 'Arab States (UNDP)' && datum.Entity !== 'Low human development (UNDP)' && datum.Entity !== 'Medium human development (UNDP)' && datum.Entity !== 'East Asia and the Pacific (UNDP)' && datum.Entity !== 'World' && datum.Entity !== 'Europe and Central Asia (UNDP)' && datum.Entity !== 'High human development (UNDP)' && datum.Entity !== 'Very high human development (UNDP)' && datum.Entity !== 'Sub-Saharan Africa (UNDP)' && datum.Entity !== 'South Asia (UNDP)' && datum.Entity !== 'Latin America and the Caribbean (UNDP)'"
                },
                {
                    "calculate": "datum.Entity == 'Serbia' ? 'Republic of Serbia' : datum.Entity == 'Bosnia and Herzegovina' ? 'Bosnia and Herz.' : datum.Entity == 'Ukraine' ? 'Ukraine' : datum.Entity == 'Tanzania' ? 'Tanzania' : datum.Entity == 'Dominican Republic' ? 'Dominican Rep.' : datum.Entity == 'South Sudan' ? 'S. Sudan' : datum.Entity == 'Central African Republic' ? 'Central African Rep.' : datum.Entity == 'Bahamas' ? 'The Bahamas' : datum.Entity == 'Cape Verde' ? 'Cabo Verde' : datum.Entity == 'Congo' ? 'Congo' : datum.Entity == 'Cote d\\'Ivoire' ? 'Côte d\\'Ivoire' : datum.Entity == 'Democratic Republic of Congo' ? 'Dem. Rep. Congo' : datum.Entity == 'Eswatini' ? 'eSwatini' : datum.Entity == 'Micronesia (country)' ? 'Federated States of Micronesia' : datum.Entity == 'Hong Kong' ? 'Hong Kong S.A.R.' : datum.Entity == 'United States' ? 'United States of America' : datum.Entity == 'Tanzania' ? 'United Republic of Tanzania' : datum.Entity == 'Serbia' ? 'Republic of Serbia' : datum.Entity == 'Sao Tome and Principe' ? 'São Tomé and Principe' : datum.Entity",
                    "as": "Standardized_Country"
                },
                {
                    "lookup": "Standardized_Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/ne_1_.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_10m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                }
            ],
            "layer": [
                {
                    "mark": {
                        "type": "geoshape",
                        "stroke": "grey",
                        "strokeWidth": 1
                    },
                    "encoding": {
                        "shape": {
                            "field": "geo",
                            "type": "geojson"
                        },
                        "color": {
                            "field": "Normalized_Unemployment",
                            "type": "quantitative",
                            "scale": {
                                "type": "linear",
                                "domain": [
                                    0,
                                    1
                                ],
                                "range": [
                                    "#e3d4f9",
                                    "#6f2c91"
                                ]
                            },
                            "legend": {
                                "title": "Gross Enrollment Ratio (%)"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Standardized_Country",
                                "type": "nominal",
                                "title": "Country"
                            },
                            {
                                "field": "Year",
                                "type": "ordinal",
                                "title": "Year"
                            },
                            {
                                "field": "Normalized_Unemployment",
                                "type": "quantitative",
                                "title": "Unemployment Rate"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/normalised_csv.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year_selection"
                },
                {
                    "aggregate": [
                        {
                            "op": "max",
                            "field": "Normalized_Unemployment",
                            "as": "max_value"
                        },
                        {
                            "op": "argmax",
                            "field": "Normalized_Unemployment",
                            "as": "country_with_max_value"
                        }
                    ]
                }
            ],
            "layer": [
                {
                    "mark": {
                        "type": "rect",
                        "fill": "lightgray",
                        "strokeWidth": 1
                    },
                    "encoding": {
                        "x": {
                            "value": 20
                        },
                        "y": {
                            "value": 460
                        },
                        "x2": {
                            "value": 240
                        },
                        "y2": {
                            "value": 540
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "fontSize": 15,
                        "stroke": "black",
                        "strokeWidth": 0.5,
                        "strokeOpacity": 1,
                        "cornerRadius": 5,
                        "align": "left",
                        "dx": 1,
                        "dy": -5
                    },
                    "encoding": {
                        "text": {
                            "value": "Country with the highest rate:"
                        },
                        "x": {
                            "value": 30
                        },
                        "y": {
                            "value": 485
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "fontSize": 15,
                        "stroke": "black",
                        "strokeWidth": 1,
                        "strokeOpacity": 1,
                        "cornerRadius": 5,
                        "align": "left",
                        "dx": 1,
                        "dy": -5
                    },
                    "encoding": {
                        "text": {
                            "field": "country_with_max_value.Entity",
                            "type": "nominal",
                            "title": "Country with Highest Rate"
                        },
                        "x": {
                            "value": 30
                        },
                        "y": {
                            "value": 510
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "fontSize": 15,
                        "stroke": "black",
                        "strokeWidth": 1,
                        "strokeOpacity": 1,
                        "cornerRadius": 5,
                        "align": "left"
                    },
                    "encoding": {
                        "text": {
                            "field": "max_value",
                            "type": "nominal",
                            "title": "Country with Highest Rate"
                        },
                        "x": {
                            "value": 30
                        },
                        "y": {
                            "value": 525
                        }
                    }
                }
            ]
        }
    ],
    "config": {
        "legend": {
            "orient": "bottom",
            "offset": 20,
            "labelFontSize": 12,
            "titleFontSize": 14,
            "labelFontWeight": "bold"
        },
        "padding": {
            "top": 20,
            "bottom": 20,
            "left": 20,
            "right": 20
        }
    }
}