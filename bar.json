{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1020,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/datasets/share-of-population-15-years-and-older-with-no-education.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "filter": "datum.Year >= 1998 && datum.Year <= 2022"
        },
        {
            "aggregate": [
                {
                    "op": "average",
                    "field": "Combined - percentage of youth and adults aged between 15 and 64 years with no education",
                    "as": "Average Duration"
                }
            ],
            "groupby": [
                "Entity"
            ]
        },
        {
            "filter": "datum['Average Duration'] > 0"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "Rank"
                }
            ],
            "sort": [
                {
                    "field": "Average Duration",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.Rank <= 10"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Entity",
            "type": "nominal",
            "title": "Country",
            "sort": "-y",
            "axis": {
                "labelFontSize": 12,
                "titleFontSize": 14,
                "labelColor": "#000000",
                "labelFontWeight": "bold",
                "titleFontWeight": "normal",
                "titlePadding": 20,
                "labelAngle": -360
            }
        },
        "y": {
            "field": "Average Duration",
            "type": "quantitative",
            "title": "Combined - percentage of youth and adults aged between 15 and 64 years with no education",
            "axis": {
                "labelFontSize": 12,
                "titleFontSize": 14,
                "labelColor": "#000000",
                "labelFontWeight": "bold",
                "titleFontWeight": "normal",
                "titlePadding": 20
            }
        },
        "color": {
            "field": "Entity",
            "type": "nominal",
            "title": "Country",
            "scale": {
                "range": [
                    "#FFB3BA",
                    "#a8a69e",
                    "#BAE1FF",
                    "#B9AEDC",
                    "#FFC3A0",
                    "#FF677D",
                    "#D4A5A5",
                    "#a888cf",
                    "#A5C8D4",
                    "#FFE156"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Entity",
                "type": "nominal"
            },
            {
                "field": "Average Duration",
                "type": "quantitative"
            }
        ]
    },
    "config": {
        "legend": {
            "orient": "bottom",
            "offset": 20,
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "padding": {
            "top": 20,
            "bottom": 20,
            "left": 20,
            "right": 20
        }
    }
}