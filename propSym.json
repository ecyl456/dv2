{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 600,
    "params": [
        {
            "name": "Year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 1991,
                "max": 2022,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "zoom_level",
            "value": 500
        }
    ],
    "projection": {
        "type": "naturalEarth1"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/ne_1_.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#6375af4e",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/datasets/expected-years-of-schooling.csv"
            },
            "transform": [
                {
                    "filter": "datum.Year == Year_selection"
                },
                {
                    "filter": "datum.Entity !== 'Arab States (UNDP)' && datum.Entity !== 'Low human development (UNDP)' && datum.Entity !== 'Medium human development (UNDP)' && datum.Entity !== 'East Asia and the Pacific (UNDP)' && datum.Entity !== 'World' && datum.Entity !== 'Europe and Central Asia (UNDP)' && datum.Entity !== 'High human development (UNDP)' && datum.Entity !== 'Very high human development (UNDP)' &&  datum.Entity !== 'Sub-Saharan Africa (UNDP)' &&  datum.Entity !== 'South Asia (UNDP)' && datum.Entity !== 'Latin America and the Caribbean (UNDP)'"
                },
                {
                    "calculate": "datum.Entity == 'Bahamas' ? 'The Bahamas' : datum.Entity == 'Cape Verde' ? 'Cabo Verde' : datum.Entity == 'Congo' ? 'Republic of the Congo' : datum.Entity == 'Cote d\\'Ivoire' ? 'Ivory Coast' : datum.Entity == 'Democratic Republic of Congo' ? 'Democratic Republic of the Congo' : datum.Entity == 'Eswatini' ? 'eSwatini' : datum.Entity == 'Micronesia (country)' ? 'Federated States of Micronesia' : datum.Entity == 'Hong Kong' ? 'Hong Kong S.A.R.' : datum.Entity == 'United States' ? 'United States of America' : datum.Entity == 'Tanzania' ? 'United Republic of Tanzania'  :  datum.Entity == 'Serbia' ? 'Republic of Serbia' : datum.Entity == 'Sao Tome and Principe' ? 'São Tomé and Principe' :  datum.Entity",
                    "as": "Standardized_Country"
                },
                {
                    "calculate": "datum.Entity",
                    "as": "debug_entity"
                },
                {
                    "lookup": "Standardized_Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ecyl456/dv2/refs/heads/main/datasets/ne_10m_admin_0_countries.csv"
                        },
                        "key": "ADMIN",
                        "fields": [
                            "ADMIN",
                            "LABEL_X",
                            "LABEL_Y"
                        ]
                    },
                    "as": [
                        "country_name",
                        "longitude",
                        "latitude"
                    ]
                },
                {
                    "calculate": "datum['Expected years of schooling']",
                    "as": "expected_years"
                }
            ],
            "mark": {
                "type": "circle",
                "tooltip": true
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "expected_years",
                    "type": "quantitative",
                    "scale": {
                        "range": [
                            0,
                            100
                        ],
                        "domain": [
                            0,
                            13,
                            25
                        ]
                    }
                },
                "color": {
                    "field": "expected_years",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {
                        "field": "Standardized_Country",
                        "title": "Country"
                    },
                    {
                        "field": "expected_years",
                        "title": "Expected Years of Schooling"
                    }
                ]
            }
        }
    ],
    "config": {
        "legend": {
            "orient": "right",
            "offset": 20
        }
    }
}